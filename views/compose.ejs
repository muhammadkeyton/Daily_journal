<!-- creating posts -->

<div class="form-container">
  <form class="post-form" action="/" method="post">
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">Post Title</label>
      <input type="text" name="postTitle" class="form-control" id="exampleFormControlInput1" placeholder="title" autocomplete="off">
    </div>
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label">Content</label>
      <textarea name="postContent" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Your post enters here"></textarea>
    </div>
    <button type="submit"  class="btn btn-outline-primary">Submit</button>

  </form>

</div>













